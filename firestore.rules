rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Flex time data - shared pool for all users
    // Anyone can read (kids view without auth)
    // Authenticated users (parents) can write
    match /flexTime/{weekId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Weekly stats for streak tracking - shared pool
    // Anyone can read (kids view without auth)
    // Authenticated users (parents) can write
    match /weeklyStats/{weekId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // User profiles - only the user can read/write their own profile
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
